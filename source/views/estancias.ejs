<!doctype html>
<html lang="en">
<% include partials/header.ejs %>
<script>
    function submitForm() {
        form.submit();
        form.reset();
    }
</script>

<body>
    <div id="root">
        <div class="app">
            <% include partials/menu.ejs %>

            <!--- INICIO DO CONTEUDO CUSTOMIZADO DA PAGINA -->
            <main class="content container-fluid">
                <div class="p-3 mt-3">
                    <div class="container">
                        <!--- INICIO DA AREA RESERVADA PARA MENSAGENS -->
                        <% if (message_erro) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= message_erro %>
                        </div>
                        <% } %>

                        <% if (message_sucesso) { %>
                        <div class="alert alert-success" role="alert">
                            <%= message_sucesso %>
                        </div>
                        <% } %>
                        <!--- FIM DA AREA RESERVADA PARA MENSAGENS -->

                        <!-- INICIO DO FORMULARIO PARA ADD/UPDATE DADOS -->
                        <form action="<%=action%>" method="post">
                            <div class="form-group row">
                                <label for="nome_estancia" class="col-sm-2 col-form-label">Nome</label>
                                <div class="col-sm-10">
                                    <% if(estancia){ %>
                                    <input type="text" class="form-control" name="nome_estancia" placeholder="Informe o nome da estância..."
                                        value="<%=estancia.Nome_Estancia%>" charCounter" maxlength="155" readonly required>
                                    <% } else{ %>
                                    <input type="text" class="form-control" name="nome_estancia" placeholder="Informe o nome do estancia..."
                                        value="" charCounter" maxlength="155" required>
                                    <% } %>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="cpf_propietario" class="col-sm-2 col-form-label">CPF Propietário</label>
                                <div class="col-sm-10">
                                    <% if(estancia){ %>
                                    <input type="number" class="form-control" name="cpf_propietario" placeholder="Informe o CPF do propietario..."
                                        value="<%=estancia.CPF_propietario%>" charCounter" maxlength="11" required>
                                    <% } else{ %>
                                    <input type="number" class="form-control" name="cpf_propietario" placeholder="Informe o CPF do propietario..."
                                        value="" charCounter" maxlength="11" required>
                                    <% } %>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="referencia_estancia" class="col-sm-2 col-form-label">Referência</label>
                                <div class="col-sm-10">
                                    <% if(estancia){ %>
                                    <input type="text" class="form-control" name="referencia_estancia" placeholder="Informe a referência do local..."
                                        value="<%=estancia.Referencia%>" charCounter" maxlength="155" required>
                                    <% } else{ %>
                                    <input type="text" class="form-control" name="referencia_estancia" placeholder="Informe a referência do local..."
                                        value="" charCounter" maxlength="155" required>
                                    <% } %>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-12 d-flex justify-content-end">
                                    <button class="btn btn-success ml-2">Pesquisar</button>
                                    <button class="btn btn-primary ml-2" type="submit" onclick="submitForm()">Salvar</button>
                                    <button class="btn ml-2" type="reset">Limpar</button>
                                </div>
                            </div>
                        </form>
                        <!-- FIM DO FORMULARIO PARA ADD/UPDATE DADOS -->
                    </div>

                    <!-- INICIO DA LISTAGEM GERAL DOS DADOS-->
                    <table class="table mt-10">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Nome</th>
                                <th>Referência</th>
                                <th>Propietário</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% estancias.forEach(function(estancia){ %>
                            <tr>
                                <td><i class="fas fa-warehouse"></i></td>
                                <td>
                                    <%= estancia.Nome_Estancia %>
                                </td>
                                <td>
                                    <%= estancia.Referencia %>
                                </td>
                                <td>
                                    <%= estancia.CPF_propietario %>
                                </td>

                                <td>
                                    <a href="/estancia/editar/<%=estancia.Nome_Estancia%>" class="btn btn-sm btn-primary">Editar</a>
                                    <a href="/estancia/remover/<%=estancia.Nome_Estancia%>" class="btn btn-sm btn-danger">Remover</a>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                    <!-- FIM DA LISTAGEM GERAL DOS DADOS -->
                    
                </div>
            </main>
            <hr />
            <!-- FIM DO CONTEUDO CUSTOMIZADO DA PAGINA -->

            <% include partials/footer.ejs %>
        </div>
    </div>
</body>

</html>